<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Pintushi\Bundle\OrganizationBundle\Entity\Organization" table="pintushi_organization">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>
        <field name="expiredAt" column="expired_at" type="datetime" nullable="true"/>
        <field name="logo" column="logo" type="string" nullable="true"/>
        <field name="subdomain" column="subdomain" type="string" nullable="true" length="10"/>
        <field name="enabled" type="boolean" nullable="true"/>
        <field name="name" Ptype="string"  nullable="true"/>
        <field name="description" type="string" nullable="true"/>
        <one-to-many target-entity="Pintushi\Bundle\OrganizationBundle\Entity\BusinessUnit" field="businessUnits" mapped-by="organization">
        </one-to-many>
        <many-to-many field="users"  target-entity="Pintushi\Bundle\UserBundle\Entity\User" fetch="LAZY" mapped-by="organizations">
            <join-table name="pintushi_user__organization">
                <join-columns>
                    <join-column referenced-column-name="id" name="organization_id" nullable="false"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column referenced-column-name="id" name="user_id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <one-to-one field="address" target-entity="Pintushi\Bundle\AddressBundle\Entity\Address" >
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="address_id" referenced-column-name="id" nullable="true" on-delete="SET NULL"/>
        </one-to-one>
         <one-to-many field="shippingMethods" target-entity="Pintushi\Bundle\ShippingBundle\Entity\ShippingMethod"  index-by="type" mapped-by="organization" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
